@model TasteFoodIt.Entities.Reservation
@{
    ViewBag.Title = "UpdateReservation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Rezervasyon Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Rezervasyon</li>
            <li class="breadcrumb-item active" aria-current="page">Rezervasyon İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateReservation", "Reservation", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form>
                            @Html.HiddenFor(x => x.ReservationId)
                            <div class="form-group">
                                <label>İsim Soyisim</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                            </div>
                            <div class="form-group">
                                <label>Telefon</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", pattern = "[0-9]{11}" })
                            </div>
                            <div class="form-group">
                                <label>Rezervasyon Tarihi</label>
                                @Html.TextBoxFor(x => x.ReservationDate, new { @class = "form-control", @type="date" })
                            </div>
                            <div class="form-group">
                                <label>Saat</label>
                                @Html.DropDownListFor(x => x.Time, (List<SelectListItem>)ViewBag.List2, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Misafir Sayısı</label>
                                @Html.DropDownListFor(x => x.GuestCount, (List<SelectListItem>)ViewBag.List3, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Rezervasyon Durumu</label>
                                @Html.DropDownListFor(x => x.ReservationStatus, (List<SelectListItem>)ViewBag.List1, new { @class = "form-control" })
                            </div>
                            <button type="submit" class="btn btn-primary">Rezervasyon Güncelle</button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

