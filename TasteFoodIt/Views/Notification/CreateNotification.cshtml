@model TasteFoodIt.Entities.Notification
@{
    ViewBag.Title = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Bildirim Ekleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Bildirim</li>
            <li class="breadcrumb-item active" aria-current="page">Bildirim İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("CreateNotification", "Notification", FormMethod.Post, new { id = "notificationForm", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label>Açıklama</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3 })
                        </div>

                        <table class="table-borderless">
                            <tr>
                                <td>
                                    <div style="margin-bottom:20px" class="container-fluid">
                                        <div style="margin-top:20px" class="d-sm-flex align-items-center justify-content-between mb-4">
                                            <h1 class="h3 mb-0 text-gray-800">İkonlar</h1>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="card">
                                                    <div class="table-responsive">
                                                        <table class="table align-items-center table-flush">
                                                            <thead class="thead-light">
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-calendar-check text-white"> Calendar Check</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-calendar-check text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-comment text-white"> Comment</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-comment text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-envelope text-white"> Envelope</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-envelope text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-file text-white"> File</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-file text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-inbox text-white"> Inbox</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-inbox text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-address-card text-white"> Person Card</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-address-card text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-pen text-white"> Pen</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-pen text-white"></i></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="NotificationIcon" value="fas fa-shopping-bag text-white"> Shopping Bag</th>
                                                                    <td><div class="icon-circle bg-primary"><i class="fas fa-shopping-bag text-white"></i></div></td>
                                                                </tr>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div style="margin-bottom:20px" class="container-fluid">
                                        <div style="margin-top:20px" class="d-sm-flex align-items-center justify-content-between mb-4">
                                            <h1 class="h3 mb-0 text-gray-800">İkon Renkleri</h1>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="card">
                                                    <div class="table-responsive">
                                                        <table class="table align-items-center table-flush">
                                                            <thead class="thead-light">
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-primary"> Primary</th>
                                                                    <td><div class="icon-circle bg-primary"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-secondary"> Secondary</th>
                                                                    <td><div class="icon-circle bg-secondary"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-success"> Success</th>
                                                                    <td><div class="icon-circle bg-success"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-danger"> Danger</th>
                                                                    <td><div class="icon-circle bg-danger"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-warning"> Warning</th>
                                                                    <td><div class="icon-circle bg-warning"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-info"> Info</th>
                                                                    <td><div class="icon-circle bg-info"></div></td>
                                                                </tr>
                                                                <tr>
                                                                    <th><input type="radio" name="IconCircleColor" value="icon-circle bg-dark"> Dark</th>
                                                                    <td><div class="icon-circle bg-dark"></div></td>
                                                                </tr>
                                                            </thead>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                        <button type="submit" class="btn btn-primary">Bildirim Ekle</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



