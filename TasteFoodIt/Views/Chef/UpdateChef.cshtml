@model TasteFoodIt.Entities.Chef
@{
    ViewBag.Title = "UpdateChef";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şef Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Şefler</li>
            <li class="breadcrumb-item active" aria-current="page">Şef İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateChef", "Chef", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form>
                            @Html.HiddenFor(x=>x.ChefId)
                            <div class="form-group">
                                <label>Adı Soyadı</label>
                                @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Ünvan</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3 })
                            </div>
                            <div class="form-group">
                                <label>Resim URL</label>
                                <input type="file" name="file" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">Şef Güncelle</button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

