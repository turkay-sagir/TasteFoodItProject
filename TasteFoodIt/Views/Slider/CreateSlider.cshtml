@model TasteFoodIt.Entities.Slider
@{
    ViewBag.Title = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (ViewBag.num2 >= 3)
{
    <div style="width:fit-content" class="container">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Hata Bildirimi</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h6><i class="fas fa-exclamation-triangle"></i><b> Dikkat!</b></h6>
                    Sadece 3 adet giriş yapabilirsin!
                </div>
            </div>
        </div>
    </div>
    <div align="center">
        <a href="/Slider/SliderList">&larr; Geri Dön</a>
    </div>
}

else
{
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Slider Ekleme Sayfası</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
                <li class="breadcrumb-item">Slider</li>
                <li class="breadcrumb-item active" aria-current="page">Slider İşlemleri</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <!-- Form Basic -->
                <div class="card mb-4">
                    <div class="card-body">
                        @using (Html.BeginForm("CreateSlider", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <form>
                                <div class="form-group">
                                    <label>Başlık</label>
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Başlık giriniz" })
                                </div>
                                <div class="form-group">
                                    <label>Açıklama</label>
                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3, @placeholder = "Açıklama giriniz" })
                                </div>
                                <div class="form-group">
                                    <label>Resim URL</label>
                                    <input type="file" name="file" class="form-control">
                                </div>
                                <button type="submit" class="btn btn-primary">Slider Ekle</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
