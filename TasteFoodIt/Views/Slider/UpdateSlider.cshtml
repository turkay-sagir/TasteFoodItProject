@model TasteFoodIt.Entities.Slider

@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Slider Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Slider</li>
            <li class="breadcrumb-item active" aria-current="page">Slider İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form method="post">
                            @Html.HiddenFor(x => x.SliderId)
                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3 })
                            </div>
                            <div class="form-group">
                                <label>Resim URL</label>
                                <input type="file" name="file" class="form-control">
                                <small>Eğer görsel değiştirmeyecekseniz boş bırakabilirsiniz!</small>
                            </div>
                            <button type="submit" class="btn btn-primary">Slider Güncelle</button>
                            <a href="/Slider/SliderList" class="btn btn-light">Geri Dön</a>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

