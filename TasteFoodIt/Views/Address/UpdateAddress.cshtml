@model TasteFoodIt.Entities.Address

@{
    ViewBag.Title = "UpdateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Adres</li>
            <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateAddress", "Address", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <form>
                            @Html.HiddenFor(x=>x.AddressId)
                            <div class="form-group">
                                <label>Telefon</label>
                                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email" })
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3 })
                            </div>
                            <button type="submit" class="btn btn-primary">Adres Güncelle</button>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

