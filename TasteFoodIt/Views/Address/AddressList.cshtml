
@{
    ViewBag.Title = "AddressList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Adres</li>
            <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Telefon</th>
                                <th>Email</th>
                                <th>Açıklama</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.AddressId != 0)
                            {
                                <tr>
                                    <td>@ViewBag.AddressId</td>
                                    <td>@ViewBag.Phone</td>
                                    <td>@ViewBag.Email</td>
                                    <td>@ViewBag.Description</td>
                                    <td>@Html.ActionLink("Sil", "DeleteAddress", new { id = ViewBag.AddressId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinizden Emin Misiniz?')" })</td>
                                    <td><a href="/Address/UpdateAddress/@ViewBag.AddressId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.num1 < 1)
    {
        <a href="/Address/CreateAddress" class="btn btn-primary">Yeni Adres Girişi</a>
    }

</div>

