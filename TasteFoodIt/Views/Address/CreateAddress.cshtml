@model TasteFoodIt.Entities.Address
@{
    ViewBag.Title = "CreateAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@if (ViewBag.num2 > 0)
{
    <div style="width:fit-content" class="container">
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Hata Bildirimi</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h6><i class="fas fa-exclamation-triangle"></i><b> Dikkat!</b></h6>
                    Sadece 1 adet giriş yapabilirsin!
                </div>
            </div>
        </div>
    </div>
    <div align="center">
        <a href="/Address/AddressList">&larr; Geri Dön</a>
    </div>
}

else
{
    <div class="container-fluid" id="container-wrapper">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Adres Ekleme Sayfası</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
                <li class="breadcrumb-item">Adres</li>
                <li class="breadcrumb-item active" aria-current="page">Adres İşlemleri</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <!-- Form Basic -->
                <div class="card mb-4">
                    <div class="card-body">
                        @using (Html.BeginForm("CreateAddress", "Address", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <form>
                                <div class="form-group">
                                    <label>Telefon</label>
                                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type="email" })
                                </div>
                                <div class="form-group">
                                    <label>Açıklama</label>
                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = 3})
                                </div>
                                <button type="submit" class="btn btn-primary">Adres Ekle</button>
                            </form>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
}

