@model List<TasteFoodIt.Entities.Testimonial>
@{
    ViewBag.Title = "TestimonialList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Referans Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Referans</li>
            <li class="breadcrumb-item active" aria-current="page">Referans İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="table-responsive">
                    <table id="tbl1" class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Adı Soyadı</th>
                                <th>Ünvan</th>
                                <th>Açıklama</th>
                                <th>Fotoğraf</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TestimonialId</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><img src="@item.ImageUrl" height="100px" width="100px" class="img-thumbnail"</td>
                                    <td>@Html.ActionLink("Sil", "DeleteTestimonial", new { id = item.TestimonialId }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstediğinizden Emin Misiniz?')" })</td>
                                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-success">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="/Testimonial/CreateTestimonial" class="btn btn-primary">Yeni Referans Girişi</a>
</div>